<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_graph"
    app:startDestination="@id/moviesScreenFragment">

    <include app:graph="@navigation/movie_detail_graph" />

    <fragment
        android:id="@+id/moviesScreenFragment"
        android:name="com.example.movielist.Screens.moviesScreen.Fragments.MoviesScreen.MoviesScreenFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_moviesScreenFragment_to_movie_detail_graph"
            app:destination="@id/movie_detail_graph"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out">
            <argument
                android:name="movieId"
                app:argType="integer"
                app:nullable="false" />
        </action>
        <action
            android:id="@+id/action_moviesScreenFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.movielist.Screens.search.SearchFragment"
        android:label="@string/empty">
        <action
            android:id="@+id/action_searchFragment_to_searchResultsFragment"
            app:destination="@id/searchResultsFragment"
            app:popUpTo="@id/moviesScreenFragment">
            <argument
                android:name="searchQuery"
                app:argType="string"
                app:nullable="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/searchResultsFragment"
        android:name="com.example.movielist.Screens.search.SearchResultsFragment"
        android:label="{searchQuery}">
        <argument
            android:name="searchQuery"
            app:argType="string"
            app:nullable="false" />
    </fragment>

    <action
        android:id="@+id/action_global_to_movie_detail_graph"
        app:destination="@id/movie_detail_graph"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out">
        <argument
            android:name="movieId"
            app:argType="integer"
            app:nullable="false"/>
    </action>

    <action
        android:id="@+id/action_global_searchFragment"
        app:destination="@id/searchFragment"/>

    <dialog
        android:id="@+id/movieModalFragment"
        android:name="com.example.movielist.Screens.moviesScreen.Fragments.MoviesScreen.MovieModalFragment"
        android:label="@string/empty">
        <argument
            android:name="movie"
            app:argType="com.example.movielist.foundation.BaseMovieItem" />
    </dialog>

    <action
        android:id="@+id/action_global_movieModalFragment"
        app:destination="@id/movieModalFragment">
        <argument
            android:name="movie"
            app:argType="com.example.movielist.foundation.BaseMovieItem" />
    </action>

    <dialog
        android:id="@+id/discoverModalFragment"
        android:name="com.example.movielist.Screens.moviesScreen.Fragments.MoviesScreen.DiscoverModalFragment"
        android:label="DiscoverModalFragment" />
    <action
        android:id="@+id/action_global_discoverModal"
        app:destination="@id/discoverModalFragment"/>

</navigation>