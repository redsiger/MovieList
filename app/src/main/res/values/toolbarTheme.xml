<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Toolbar  -->
    <style name="Theme.ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="titleTextColor">@color/toolbar_text_color</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitle</item>
        <item name="subtitleTextColor">@color/toolbar_text_color</item>
    </style>

    <!--  Toolbar Title  -->
    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--  Toolbar Subtitle  -->
    <style name="ToolbarSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>