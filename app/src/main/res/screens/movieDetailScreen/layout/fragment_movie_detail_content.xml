    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/castContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_large"
        app:layout_constraintTop_toBottomOf="@id/aboutContainer">

        <TextView
            style="@style/MovieDetailSectionTitle"
            android:id="@+id/castTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin_extraLarge"
            android:layout_marginEnd="@dimen/app_margin_extraLarge"
            android:text="@string/movie_detail_cast_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/castRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin_extraLarge"
            android:paddingStart="@dimen/app_padding_extraLarge"
            android:paddingTop="@dimen/app_padding_medium"
            android:paddingBottom="@dimen/app_padding_small"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/castTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/crewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_large"
        app:layout_constraintTop_toBottomOf="@id/castContainer">

        <TextView
            style="@style/MovieDetailSectionTitle"
            android:id="@+id/crewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin_extraLarge"
            android:layout_marginEnd="@dimen/app_margin_extraLarge"
            android:text="@string/movie_detail_crew_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/crewRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin_extraLarge"
            android:paddingStart="@dimen/app_padding_extraLarge"
            android:paddingTop="@dimen/app_padding_medium"
            android:paddingBottom="@dimen/app_padding_small"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/crewTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recommendationsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_large"
        app:layout_constraintTop_toBottomOf="@id/crewContainer">

        <TextView
            style="@style/MovieDetailSectionTitle"
            android:id="@+id/recommendationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin_extraLarge"
            android:layout_marginEnd="@dimen/app_margin_extraLarge"
            android:text="@string/movie_detail_recommendations_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendationsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin_extraLarge"
            android:paddingStart="@dimen/app_padding_extraLarge"
            android:paddingTop="@dimen/app_padding_medium"
            android:paddingBottom="@dimen/app_padding_small"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/recommendationsTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>