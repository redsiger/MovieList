<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/app_padding_extraLarge"
    android:paddingBottom="@dimen/app_padding_extraLarge"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/alarmModal_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/app_padding_large"
        android:paddingEnd="@dimen/app_padding_large"
        style="@style/ModalTitle"
        tools:text="Some text"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/alarmModal_remind_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_extraLarge"
        android:paddingStart="@dimen/app_padding_large"
        android:paddingEnd="@dimen/app_padding_large"
        android:paddingBottom="@dimen/app_padding_large"
        android:paddingTop="@dimen/app_padding_large"
        android:drawablePadding="@dimen/app_margin_extraLarge"
        app:layout_constraintTop_toBottomOf="@id/alarmModal_title_text"
        style="@style/ModalSubtitle"
        android:background="?attr/selectableItemBackground"
        app:drawableStartCompat="@drawable/ic_alarm" />

    <TextView
        android:id="@+id/alarmModal_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/app_padding_large"
        android:paddingEnd="@dimen/app_padding_large"
        android:paddingBottom="@dimen/app_padding_large"
        android:paddingTop="@dimen/app_padding_large"
        android:text="@string/btn_delete_title"
        android:drawablePadding="@dimen/app_margin_extraLarge"
        app:layout_constraintTop_toBottomOf="@id/alarmModal_remind_btn"
        style="@style/ModalSubtitle"
        android:background="?attr/selectableItemBackground"
        app:drawableStartCompat="@drawable/ic_delete" />

    <ProgressBar
        android:id="@+id/alarmModal_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>